{% macro render_source(lines) -%}
<div class="row">
  <div class="one column lineno">
    <pre>
{%- for line in lines -%}
{{ line.number }} {{ line|line_reason }}
{% endfor -%}
    </pre>
  </div>
  <div class="eleven columns code">
    <pre>
{%- for line in lines -%}
<span class="{{ line|line_status }}">{{ line.source|escape }}</span>
{%- endfor -%}
    </pre>
  </div>
</div>
{%- endmacro %}
